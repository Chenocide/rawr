            </controls:TabItem>
            <controls:TabItem x:Name="Page_04_PetBuffs" Header="Pet Buffs">
            	<Grid x:Name="Page_04_Layout"/>
            </controls:TabItem>
            <controls:TabItem x:Name="Page_05_Details" Header="Details">
                <Grid x:Name="Page_05_Layout"/>
            </controls:TabItem>
        </controls:TabControl>
    </Grid>
</UserControl>
