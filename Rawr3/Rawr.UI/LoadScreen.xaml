<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Rawr.UI.LoadScreen">
	<UserControl.Resources>
		<Style x:Key="LoadingTextStyle" TargetType="TextBlock">
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
			<Setter Property="Margin" Value="2,0,0,2"/>
			<Setter Property="FontSize" Value="12"/>
		</Style>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" Background="#BF000000">
		<Image HorizontalAlignment="Center" Margin="0,0,0,0" Width="Auto" Source="Images/Rawr.Splash.png" Stretch="None" VerticalAlignment="Center"/>
		<StackPanel x:Name="LabelStack" HorizontalAlignment="Left" Margin="25,0,0,25" VerticalAlignment="Bottom"/>
	</Grid>
</UserControl>