<basics2:ChildWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:basics2="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    xmlns:localUI="clr-namespace:Rawr.UI" 
    mc:Ignorable="d"
    x:Class="Rawr.UI.DG_BuffsByRaidMembers"
    Title="Apply Buffs Based on Raid Members"
    Width="860" Height="420">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*" />
                <ColumnDefinition Width="60*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Left Side -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <TextBlock Margin="4,2" Text="Raid Size:" VerticalAlignment="Center" />
                <ComboBox Height="23" Grid.Column="1" Margin="4,2" Name="CB_RaidSize" SelectionChanged="CB_RaidSize_SelectionChanged" FlowDirection="LeftToRight">
                    <System:Int32>5</System:Int32>
                    <System:Int32>10</System:Int32>
                    <System:Int32>25</System:Int32>
                    <System:Int32>40</System:Int32>
                </ComboBox>
            </Grid>
            <ListBox Margin="4,2" Name="List_Classes" Grid.Row="1" />
            <Button Name="BT_Delete" Content="Delete" Grid.Row="2" Margin="4,2,170,2" Click="BT_Delete_Click" />
            <Button Name="BT_DeleteAll" Content="Delete All" Grid.Row="2" Margin="172,2,4,2" Click="BT_DeleteAll_Click" />


            <!-- Right Side -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Select the class you would like to add:" Margin="4,2" VerticalAlignment="Center" />
                <ComboBox Name="CB_Class2Add" Grid.Column="1" Margin="4,2" SelectionChanged="CB_Class2Add_SelectionChanged">
                    <System:String>Death Knight</System:String>
                    <System:String>Druid</System:String>
                    <System:String>Hunter</System:String>
                    <System:String>Mage</System:String>
                    <System:String>Paladin</System:String>
                    <System:String>Priest</System:String>
                    <System:String>Rogue</System:String>
                    <System:String>Shaman</System:String>
                    <System:String>Warlock</System:String>
                    <System:String>Warrior</System:String>
                </ComboBox>
                <Button x:Name="BT_Add" Content="Add" Grid.Column="2" Margin="4,2" Height="23" Width="45" Click="BT_Add_Click" />
            </Grid>

            <toolkit:WrapPanel Margin="4" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="2">
                <localUI:GroupBox x:Name="GB_Warrior" Margin="2,0">
                    <localUI:GroupBox.Header>
                        <TextBlock Text="Warrior" FontWeight="Bold" Foreground="BurlyWood"/>
                    </localUI:GroupBox.Header>

                    <Grid x:Name="LO_Warrior" Margin="0,-5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <TextBlock Text="How:" FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="Warriors apply buffs via shouting or performing damage." Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" />
                        <!-- Row 1 -->
                        <TextBlock Text="Limits:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="1 Buff Shout per Warrior to players, 1 Debuff Shout to Target, Thunderclap is only usable by Arms and Prot" Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1" />
                        <!-- Rows 2-4 -->
                        <RadioButton x:Name="RB_Warrior_Tank" Content="Protection" Grid.Row="2" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="WarriorSpec" FontWeight="Bold" Checked="CK_WarriorSpec_Changed" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="Sunder Armor (Armor Reduction),&#x0a;Thunderclap (Targ AtkSpd Reduc)" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Warrior_Arms" Content="Arms" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="WarriorSpec" FontWeight="Bold" Checked="CK_WarriorSpec_Changed" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Trauma (Bleed Bonus),&#x0a;Blood Frenzy (Phys DMG Bonus),&#x0a;Shattering Throw (Temp Armor Reduc)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Warrior_Fury" Content="Fury" Grid.Row="4" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="WarriorSpec" FontWeight="Bold" Checked="CK_WarriorSpec_Changed" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Rampage (Crit)" TextWrapping="Wrap" />
                        <!-- Row 5 -->
                        <TextBlock Name="LB_Warrior_BuffShout" Text="Buff Shout:" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox Name="CB_Warrior_BuffShout" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" SelectedIndex="1" Margin="4,2">
                            <System:String>None</System:String>
                            <System:String>Battle Shout (Strength, Agility)</System:String>
                            <System:String>Commanding Shout (Stamina)</System:String>
                        </ComboBox>
                        <!-- Row 6 -->
                        <TextBlock Name="LB_Warrior_DebuffShout" Text="Debuff Shout:" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox Name="CB_Warrior_DebuffShout" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" SelectedIndex="1" Margin="4,2">
                            <System:String>None</System:String>
                            <System:String>Demoralizing Shout (Target Dmg Reduc)</System:String>
                        </ComboBox>
                        <!-- Row 7 -->
                        <TextBlock Name="LB_Warrior_Thunderclap" Text="Debuff:" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox x:Name="CB_Warrior_Thunderclap" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" SelectedIndex="1" Margin="4,2">
                            <System:String>None</System:String>
                            <System:String>Thunderclap (Target AtkSpd Reduc)</System:String>
                        </ComboBox>
                        <!-- Row 8 -->
                        <TextBlock Name="LB_Warrior_Sunder" Text="Debuff:" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox x:Name="CB_Warrior_Sunder" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" SelectedIndex="1">
                            <System:String>None</System:String>
                            <System:String>Sunder Armor (Target Armor Reduc)</System:String>
                        </ComboBox>
                    </Grid>
                </localUI:GroupBox>
                <localUI:GroupBox x:Name="GB_Hunter" Margin="2,0">
                    <localUI:GroupBox.Header>
                        <TextBlock Text="Hunter" FontWeight="Bold" Foreground="Green"/>
                    </localUI:GroupBox.Header>

                    <Grid x:Name="LO_Hunter" Margin="0,-5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <TextBlock Text="How:" FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="Hunters apply most buffs before the fight starts, passively or with a Pet's ability." Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" />
                        <!-- Row 1 -->
                        <TextBlock Text="Limits:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="1 Sting per Hunter to Target, 1 Hunter's Mark to Target,&#x0a;1 Pet at a time which limits what debuffs are available" Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1" />
                        <!-- Rows 2-4 -->
                        <RadioButton x:Name="RB_Hunter_BM" Content="Beast Master" Grid.Row="2" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="HunterSpec" FontWeight="Bold" Checked="CK_HunterSpec_Changed" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="Ferocious Inspiration (Damage),&#x0a;Certain Pets Give Target Debuffs" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Hunter_MM" Content="Marksman" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="HunterSpec" FontWeight="Bold" Checked="CK_HunterSpec_Changed" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Trueshot Aura (AP),&#x0a;Improved Hunter's Mark" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Hunter_SV" Content="Survival" Grid.Row="4" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="HunterSpec" FontWeight="Bold" Checked="CK_HunterSpec_Changed" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Hunting Party (Haste)" TextWrapping="Wrap" />
                        <!-- Row 5 -->
                        <TextBlock Name="LB_Hunter_Pet" FontWeight="Bold" Grid.RowSpan="1" HorizontalAlignment="Left" Margin="4,2" Text="Pet:" VerticalAlignment="Center" Grid.Row="5" Grid.ColumnSpan="1" Grid.Column="0" />
                        <ComboBox Name="CB_Hunter_Pet" Grid.Column="1" Grid.Row="5" Grid.RowSpan="1" Margin="4,2" Grid.ColumnSpan="1" SelectedIndex="17">
                            <System:String>None</System:String>
                            <System:String>Serpent: Corrosive Spit (12% Target Armor Reduc)</System:String>
                            <System:String>Raptor: Tear Armor (12% Target Armor Reduc)</System:String>
                            <System:String>Ravager: Ravage (4% Bonus Physical Dmg)</System:String>
                            <System:String>Worm: Acid Spit (4% Bonus Physical Dmg)</System:String>
                            <System:String>Hyena: Tendon Rip (3% Bonus Bleed Dmg)</System:String>
                            <System:String>Rhino: Stampede (3% Bonus Bleed Dmg)</System:String>
                            <System:String>Boar: Gore (3% Bonus Bleed Dmg)</System:String>
                            <System:String>Dragonhawk: Fire Breath (8% Target Spell Dmg Debuff)</System:String>
                            <System:String>Wind Serpent: Lightning Breath (8% Target Spell Dmg Debuff)</System:String>
                            <System:String>Core Hound: Ancient Hysteria (Temp Haste)</System:String>
                            <System:String>Shale Spider: Embrace of the Shale Spider (5% Bonus Str, Agi, Int, Sta)</System:String>
                            <System:String>Cat or BM w/ Spirit Beast: Roar of Courage (Str, Agi)</System:String>
                            <System:String>Bear: Demoralizing Roar (Target 10% Less Dmg Dealt)</System:String>
                            <System:String>Wolf: Furious Howl (5% Crit)</System:String>
                            <System:String>Devilsaur: Terrifying Roar (5% Crit)</System:String>
                            <System:String>Silithid: Qiraji Fortitude (Stamina)</System:String>
                            <System:String>Other</System:String>
                        </ComboBox>
                        <!-- Row 6 -->
                        <TextBlock Name="LB_Hunter_Sting" Text="Sting:" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox x:Name="CB_Hunter_Sting" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" SelectedIndex="2" Margin="4,2">
                            <System:String>None</System:String>
                            <System:String>Scorpid Sting (Target Misses 3% More Often)</System:String>
                            <System:String>Other</System:String>
                        </ComboBox>
                        <!-- Row 7 -->
                        <TextBlock Name="LB_Hunter_Mark" Text="Hunter's Mark:" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox x:Name="CB_Hunter_Mark" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" SelectedIndex="2">
                            <System:String>None</System:String>
                            <System:String>Hunter's Mark (RAP)</System:String>
                            <System:String>Hunter's Mark (Glyphed) (RAP)</System:String>
                        </ComboBox>
                        <CheckBox Name="CK_Hunter_Mark" Content="Improved" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" />
                        <!-- Row 8 -->
                        <TextBlock Name="LB_Hunter_Aspect" Text="Aspect:" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox x:Name="CB_Hunter_Aspect" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" SelectedIndex="2">
                            <System:String>None</System:String>
                            <System:String>Aspect of the Wild (Nature Resist)</System:String>
                            <System:String>Other</System:String>
                        </ComboBox>
                    </Grid>
                </localUI:GroupBox>
                <localUI:GroupBox x:Name="GB_Mage" Margin="2,0">
                    <localUI:GroupBox.Header><TextBlock Text="Mage" FontWeight="Bold" Foreground="LightBlue"/></localUI:GroupBox.Header>

                    <Grid x:Name="LO_Mage" Margin="0,-5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <!-- Row 1 -->
                        <TextBlock Text="How:" FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="Mages apply buffs before the raid starts and when doing damage." Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" />
                        <!-- Row 2 -->
                        <TextBlock Text="Limits:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="1 SpellCrit Debuff on Target" Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1" />
                        <!-- Row 3 -->
                        <TextBlock FontWeight="Bold" Margin="4,2" Text="All Mages:" Grid.Row="2" />
                        <TextBlock Text="Arcane Brilliance (Mana),&#x0a;Focus Magic (SpellCrit),&#x0a;Time Warp (Temp Haste)" Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="1" />
                        <!-- Rows 4-6 -->
                        <RadioButton x:Name="RB_Mage_Frost" Content="Frost" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="MageSpec" FontWeight="Bold" Checked="CK_MageSpec_Changed" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="Enduring Winter (Mana Regen)" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Mage_Fire" Content="Fire" Grid.Row="4" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="MageSpec" FontWeight="Bold" Checked="CK_MageSpec_Changed" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Critical Mass (SpellCrit Debuff)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Mage_Arcane" Content="Arcane" Grid.Row="5" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="MageSpec" FontWeight="Bold" Checked="CK_MageSpec_Changed" />
                        <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Arcane Tactics (Bonus Damage)" TextWrapping="Wrap" />
                        <!-- Row 7 -->
                        <TextBlock Name="LB_Mage_Focus" Text="Focus Magic:" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" VerticalAlignment="Center" Margin="4,2" HorizontalAlignment="Left" FontWeight="Bold" />
                        <ComboBox Name="CB_Mage_Focus" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" SelectedIndex="1" Margin="4,2">
                            <System:String>None</System:String>
                            <System:String>Focus Magic</System:String>
                        </ComboBox>
                    </Grid>
                </localUI:GroupBox>
                <localUI:GroupBox x:Name="GB_Priest" Margin="2,0">
                    <localUI:GroupBox.Header><TextBlock Text="Priest" FontWeight="Bold" Foreground="LightGray"/></localUI:GroupBox.Header>
                    
                    <Grid x:Name="LO_Priest" Margin="0,-5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <TextBlock Text="How:" FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="Priests apply most buffs before the fight starts and some passively." Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" />
                        <!-- Row 1 -->
                        <TextBlock Text="Limits:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="" Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1" />
                        <!-- Row 2 -->
                        <TextBlock Text="All Priests:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="Power Word Fortitude (Stamina),&#x0a;Shadow Protection (Shadow Resist)" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" TextWrapping="Wrap" />
                        <!-- Rows 3-5 -->
                        <RadioButton x:Name="RB_Priest_D" Content="Discipline" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="PriestSpec" FontWeight="Bold" Checked="CK_PriestSpec_Changed" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="Power Infusion (Temp Spell Haste, Mana Regen)" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Priest_H" Content="Holy" Grid.Row="4" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="PriestSpec" FontWeight="Bold" Checked="CK_PriestSpec_Changed" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Inspiration (Damage Taken Reduc),&#x0a;Hymn of Hope (Mana, Burst Mana Regen)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Priest_S" Content="Shadow" Grid.Row="5" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="PriestSpec" FontWeight="Bold" Checked="CK_PriestSpec_Changed" />
                        <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Vampiric Touch (Mana Regen),&#x0a;Mind Quickening (Spell Haste)" TextWrapping="Wrap" />
                    </Grid>
                </localUI:GroupBox>
                <StackPanel x:Name="LO_DeathKnight" Margin="4">
                    <CheckBox x:Name="CK_DeathKnights" Content="Death Knights" FontWeight="Bold" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,2,2,4" Foreground="Maroon" />
                    <CheckBox x:Name="CK_BloodDPSDK" Content="BloodDPSDK" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_DeathKnights, Path=IsChecked}" />
                    <CheckBox x:Name="CK_FrostDPSDK" Content="FrostDPSDK" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_DeathKnights, Path=IsChecked}" />
                    <CheckBox x:Name="CK_UnholyDPSDK" Content="UnholyDPSDK" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_DeathKnights, Path=IsChecked}" />
                    <CheckBox x:Name="CK_BloodTankDK" Content="BloodTankDK" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_DeathKnights, Path=IsChecked}" />
                    <CheckBox x:Name="CK_FrostTankDK" Content="FrostTankDK" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_DeathKnights, Path=IsChecked}" />
                    <CheckBox x:Name="CK_UnholyTankDK" Content="UnholyTankDK" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_DeathKnights, Path=IsChecked}" />
                </StackPanel>
                <StackPanel x:Name="LO_Druid" Margin="4">
                    <CheckBox x:Name="CK_Druids" Content="Druids" FontWeight="Bold" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,2,2,4" Foreground="Orange" />
                    <CheckBox x:Name="CK_Bear" Content="Bear" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_Druids, Path=IsChecked}" />
                    <CheckBox x:Name="CK_Cat" Content="Cat" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_Druids, Path=IsChecked}" />
                    <CheckBox x:Name="CK_Tree" Content="Tree" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,0,4,0" IsEnabled="{Binding ElementName=CK_Druids, Path=IsChecked}" />
